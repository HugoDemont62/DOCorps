# ===================================
# DEVOPSCORP - Variables d'environnement
# ===================================
# Copier ce fichier en .env et remplir les valeurs

# -----------------------------------
# ENVIRONNEMENT
# -----------------------------------
NODE_ENV=development
APP_ENV=local

# -----------------------------------
# FRONTEND
# -----------------------------------
REACT_APP_API_URL=http://localhost:8080/api
REACT_APP_PRODUCT_API_URL=http://localhost:5000/api
REACT_APP_NAME=DevOpsCorp

# -----------------------------------
# AUTH API (PHP)
# -----------------------------------
AUTH_API_PORT=8080
AUTH_DB_HOST=localhost
AUTH_DB_PORT=3306
AUTH_DB_NAME=devopscorp_auth
AUTH_DB_USER=root
AUTH_DB_PASSWORD=changeme

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this
JWT_EXPIRATION=3600
JWT_ALGORITHM=HS256

# -----------------------------------
# PRODUCT API (Node.js/Python)
# -----------------------------------
PRODUCT_API_PORT=5000
PRODUCT_DB_HOST=localhost
PRODUCT_DB_PORT=5432
PRODUCT_DB_NAME=devopscorp_products
PRODUCT_DB_USER=postgres
PRODUCT_DB_PASSWORD=changeme

# -----------------------------------
# DOCKER COMPOSE
# -----------------------------------
COMPOSE_PROJECT_NAME=devopscorp

# MySQL
MYSQL_ROOT_PASSWORD=root_password_changeme
MYSQL_DATABASE=devopscorp_auth
MYSQL_USER=devopscorp
MYSQL_PASSWORD=devopscorp_password

# PostgreSQL
POSTGRES_DB=devopscorp_products
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres_password_changeme

# -----------------------------------
# CI/CD
# -----------------------------------
SONAR_TOKEN=your-sonarqube-token
SONAR_HOST_URL=https://sonarcloud.io
SONAR_PROJECT_KEY=devopscorp

# -----------------------------------
# CLOUD / DEPLOYMENT
# -----------------------------------
# AWS
AWS_REGION=eu-west-1
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key

# Ou Azure
AZURE_SUBSCRIPTION_ID=your-subscription-id
AZURE_TENANT_ID=your-tenant-id

# Ou GCP
GCP_PROJECT_ID=your-project-id
GCP_REGION=europe-west1

# -----------------------------------
# MONITORING
# -----------------------------------
# Prometheus
PROMETHEUS_PORT=9090

# Grafana
GRAFANA_PORT=3001
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=admin_changeme

# -----------------------------------
# NOTIFICATIONS
# -----------------------------------
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/YOUR/WEBHOOK

# -----------------------------------
# SÉCURITÉ
# -----------------------------------
# Limites de rate limiting
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS
CORS_ORIGIN=http://localhost:3000

# -----------------------------------
# LOGS
# -----------------------------------
LOG_LEVEL=info
LOG_FORMAT=json
